import java.util.Scanner;

public class FinalProject {

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        int choice;
      
        do {
            displayMenu();
            System.out.print("Enter your choice (1-12, 0 to exit): ");
            choice = scanner.nextInt();
            scanner.nextLine();
            
            switch (choice) {
                case 1:
                    palindromeCheck(scanner);
                    break;
                case 2:
                    countVowelsConsonants(scanner);
                    break;
                case 3:
                    armstrongNumberCheck(scanner);
                    break;
                case 4:
                    reverseArray(scanner);
                    break;
                case 5:
                    add2DArrays(scanner);
                    break;
                case 6:
                    countWords(scanner);
                    break;
                case 7:
                    countCharacters(scanner);
                    break;
                case 8:
                    gcdAndLcm(scanner);
                    break;
                case 9:
                    binaryToDecimal(scanner);
                    break;
                case 10:
                    calculateSimpleInterest(scanner);
                    break;
                case 11:
                    countCharacterOccurrence(scanner);
                    break;
                case 12:
                    calculateBMI(scanner);
                    break;
                case 0:
                    System.out.println("Exiting program...");
                    break;
                default:
                    System.out.println("Invalid choice. Please try again.");
            }
            
            if (choice != 0) {
                System.out.println("\nPress Enter to continue...");
                scanner.nextLine();
            }
        } while (choice != 0);
        
        scanner.close();
    }
    
    private static void displayMenu() {
        System.out.println("\n===== Programming 1 Final Project Menu =====");
        System.out.println("1. Palindrome Check (for a string or number)");
        System.out.println("2. Count Vowels and Consonants in a Word");
        System.out.println("3. Armstrong Number Check");
        System.out.println("4. Reverse an Array");
        System.out.println("5. 2D Array Addition");
        System.out.println("6. Count Words in a Sentence");
        System.out.println("7. Count Characters (including spaces) in a Sentence");
        System.out.println("8. GCD and LCM of Two Numbers");
        System.out.println("9. Binary to Decimal Conversion");
        System.out.println("10. Calculate Simple Interest");
        System.out.println("11. Count Occurrence of a Character in a String");
        System.out.println("12. BMI (Body Mass Index) Calculator");
        System.out.println("0. Exit");
    }
    
    private static void palindromeCheck(Scanner scanner) {
        System.out.println("\n=== Palindrome Check ===");
    }
    
    private static void countVowelsConsonants(Scanner scanner) {
        System.out.println("\n=== Count Vowels and Consonants ===");
    }
    
    private static void armstrongNumberCheck(Scanner scanner) {
        System.out.println("\n=== Armstrong Number Check ===");
    }
    
    private static void reverseArray(Scanner scanner) {
        System.out.println("\n=== Reverse an Array ===");
    }
    
    private static void add2DArrays(Scanner scanner) {
        System.out.println("\n=== 2D Array Addition ===");
    }
    
    private static void countWords(Scanner scanner) {
        System.out.println("\n=== Count Words in a Sentence ===");
    }
    
    private static void countCharacters(Scanner scanner) {
        System.out.println("\n=== Count Characters in a Sentence ===");
    }
    
    private static void gcdAndLcm(Scanner scanner) {
        System.out.println("\n=== GCD and LCM Calculator ===");
    }
    
    private static void binaryToDecimal(Scanner scanner) {
        System.out.println("\n=== Binary to Decimal Conversion ===");
    }
    
    private static void calculateSimpleInterest(Scanner scanner) {
        System.out.println("\n=== Simple Interest Calculator ===");
    }
    
    private static void countCharacterOccurrence(Scanner scanner) {
        System.out.println("\n=== Character Occurrence Counter ===");
    }
    
    private static void calculateBMI(Scanner scanner) {
        System.out.println("\n=== BMI Calculator ===");
    }
}
